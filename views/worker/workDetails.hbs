<div class="container">
    <article class="card">
        <header class="card-header"> My Bookings / Tracking </header>
        <div class="card-body">
            <h6>Booking ID: {{trackData._id}}</h6>
            <article class="card">
                <div class="card-body row">
                    <div class="col"> <strong>Confirmed Date</strong>
                        <br>{{trackData.day}}-{{trackData.month}}-{{trackData.year}}</div>
                    <div class="col"> <strong>Customer Name</strong> <br> {{trackData.User_Name}} <i
                            class="fa fa-phone"></i>
                    </div>
                    <div class="col"> <strong>Status:</strong> <br> {{trackData.status}} </div>
                    <div class="col"> <strong>Confirmed Time</strong> <br> {{trackData.hour}}:{{trackData.minutes}}
                    </div>
                </div>
            </article>
            <div class="track">
                <div class="step active"> <span class="icon">✓<i class="fa fa-check"></i> </span> <span
                        class="text">Booking confirmed</span> </div>
                <div class="step"> <span class="icon"> {{#if trackData.userAuth}}✓{{/if}}<i class="fa fa-box"></i>
                    </span> <span class="text">Work Completed</span></div>
            </div>
            <hr>
            <hr>
            {{#if trackData.userAuth}}

            {{else}}
            {{#if trackData.workStatus}}
            <a href="#" class="btn btn-danger" data-abc="true"> Under Verification</a>
            {{else}}
            
            <a href="/worker/workCompleted/{{trackData._id}}" class="btn btn-warning" data-abc="true"> <i class="fa fa-chevron-left"></i> Work Completed</a>
            {{/if}}
            <form action="/worker/changeTrackData/{{trackData._id}}" method="post">
                <div class="select">
                    <select class="form-control" name="status" id="category">
                        <option>select status</option>
                        <option>On The Way</option>
                        <option>Nearby</option>
                        <option>At Your Destination</option>
                    </select>
                    <button class="btn btn-success" type="submit">Apply</button>
                </div>
            </form>
{{/if}}
        </div>
    </article>
</div>



