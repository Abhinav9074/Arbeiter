<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Worker Login</h2>
            <form action="/worker/worker-login" method="post">
                {{#if loginErr}}
                <p class="error" style="color:red;">{{loginErr}}</p>
                {{/if}}


                <div class="form-group">
                    <lable>WORKER ID</lable>
                    <input type="text" class="form-control" name="Worker_Id" placeholder="Enter Worker ID">
                </div>
                <div class="form-group">
                    <lable>Password</lable>
                    <input type="password" class="form-control" name="Password" placeholder="Password">
                </div>
                <a href="/worker/signup"> Create New Account ?</a>
                <button type="submit" class="btn btn-primary float-right">Login</button>
        </div>
        </form>
    </div>
</div>
</div>