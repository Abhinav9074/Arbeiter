<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Enter your Details</h3>
            <form action="/contactWorker" method="post">

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <input type="text" id="firstName" class="form-control form-control-lg" name="name"/>
                    <label class="form-label" for="firstName">Name</label>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <input type="textarea" id="lastName" class="form-control form-control-lg" name="address"/>
                    <label class="form-label" for="lastName">Address</label>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 d-flex align-items-center">

                  <div class="form-outline datepicker w-100">
                    <input type="number" class="form-control form-control-lg" id="birthdayDate" name="pincode"/>
                    <label for="pincode" class="form-label">Pincode</label>
                  </div>

                </div>
                <div class="col-md-6 mb-4">
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <input type="email" id="emailAddress" class="form-control form-control-lg" name="email"/>
                    <label class="form-label" for="emailAddress">Email</label>
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <input type="tel" id="phoneNumber" class="form-control form-control-lg" name="phone" />
                    <label class="form-label" for="phoneNumber">Phone Number</label>
                  </div>


                  <div class="form-outline mb-4">
                      <input type="hidden" id="form3Example99" class="form-control form-control-lg"
                        name="workerId" value="{{conDetails._id}}">
                    </div>

                    <div class="form-outline mb-4">
                      <input type="hidden" id="form3Example99" class="form-control form-control-lg"
                        name="userId" value="{{user._id}}">
                    </div>

                </div>
              </div>

              <div class="row">
                <div class="col-12">

                </div>
              </div>

              <div class="mt-4 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



