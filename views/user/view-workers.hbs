            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>


<section>
    <div class="container mt-5">
        <div class="row">
            {{#each workers}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height : 27rem;">
                    <img class="card-img-top" src="/worker-images/{{this._id}}.jpg" alt="Card image cap"
                        style="height: 10rem;">
                    <div class="card-body">
                        <h2 class="card-title">{{this.Name}}</h2>
                        <h4 class="card-title">{{this.Place}}</h4>
                        <h5 class="card-title">{{this.Category}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        <a href="#" class="btn btn-primary">Call Now</a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>